{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "paths": {
      "ngrx-forms": [
        "."
      ]
    },
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "enableResourceInlining": true,
    "compilationMode": "partial"
  },
  "exclude": [
    "node_modules",
    "example-app",
    "dist",
    "types"
  ]
}
